pipeline {
    agent none

    stages {
        stage('Checkout') {
            agent { label 'build-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                checkout scm
            }
        }

        stage('Instalar dependencias') {
            agent { label 'build-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Analisis estatico') {
            agent { label 'build-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'flake8 src/ || true'  // Permite continuar aunque haya warnings
                bat 'bandit -r src/ || true'
            }
        }

        stage('Tests unitarios') {
            agent { label 'test-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'pytest tests/unit'
            }
        }

        stage('Tests funcionales') {
            agent { label 'test-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'pytest tests/funcional'
            }
        }

        stage('Cobertura') {
            agent { label 'test-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'pytest --cov=src --cov-report=term-missing'
            }
        }

        stage('Empaquetado') {
            agent { label 'build-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'zip -r artefacto.zip src/'
            }
        }

        stage('Despliegue simulado') {
            agent { label 'deploy-agent' }
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'echo ${WORKSPACE}'
                bat 'echo "Desplegando artefacto ficticio..."'
                bat 'sleep 2' // Simula algo de tiempo real
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
