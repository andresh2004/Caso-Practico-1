pipeline {
    agent any

    stages {
        stage('Preparar Entorno') {
            steps {
                bat 'whoami'
                bat 'hostname'
                bat 'cd'
            }
        }

        stage('Levantar API') {
            steps {
                echo 'Iniciando API en segundo plano...'
                bat 'start /B py -m app.api'
                // Esperar 10 segundos para asegurar que la API levante antes de seguir
                sleep time: 10, unit: 'SECONDS'  // Da tiempo a que la API levante
            }
        }

        stage('Ejecutar Pruebas') {
            steps {
                echo 'Ejecutando pruebas con pytest...'
                bat 'pytest --junitxml=report.xml'
            }
        }

        stage('Finalizar') {
            steps {
                echo 'Finalizando ejecuci√≥n...'
                bat 'taskkill /F /IM python.exe || exit 0'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado. Consulta los resultados en el log.'
        }
    }
}
